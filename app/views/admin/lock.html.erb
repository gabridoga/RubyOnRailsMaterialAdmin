<div class="row">
  <div class="col s4"></div>
  <div class="col s4">
    <div class="col s2"></div>
    <div class="col s8">
      <div id="login-page" class="row">
        <div class="col s12 z-depth-4 card-panel">
          <form class="login-form">
            <div class="row">
              <div class="input-field col s12 center">
                <img src="http://demo.geekslabs.com/materialize/v1.1/images/avatar.jpg" alt="" class="circle responsive-img valign profile-image-login">
                <h4 class="header">John Doe</h4>
              </div>
            </div>
            <div class="row margin">
              <div class="input-field col s12">
                <i class="material-icons prefix">lock_outline</i>
                <input id="password" type="password">
                <label for="password">Password</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <a class="btn waves-effect waves-light col s12" href=<%= admin_index_path %>>Login</a>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s6 m6 l6">
                <p class="margin medium-small"><a href=<%= admin_register_path %>>Register Now!</a></p>
              </div>
              <div class="input-field col s6 m6 l6">
                <p class="margin right-align medium-small"><a href="page-forgot-password.html">Forgot password ?</a></p>
              </div>
            </div>

          </form>
        </div>
      </div>
    </div>
    <div class="col s2"></div>
  </div>
  <div class="col s4"></div>
</div>
